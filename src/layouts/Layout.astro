---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="VELTRIQ - Minimal. Timeless." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">

		<meta property="og:title" content={title} />
		<meta property="og:description" content="VELTRIQ - Minimal. Timeless. Essentials for the modern wardrobe." />
		<meta property="og:image" content="/images/logo w text.png" />
		<meta property="og:type" content="website" />

		<title>{title}</title>
	</head>
	<body class="bg-[#050505] font-sans text-white antialiased selection:bg-white selection:text-black overflow-x-hidden">
		<!-- Global Animated Background -->
		<div class="fixed inset-0 -z-50 pointer-events-none" aria-hidden="true">
			<div class="absolute top-[-10%] left-[-10%] w-[45vw] h-[45vw] bg-white/[0.08] rounded-full blur-[120px] animate-blob"></div>
			<div class="absolute top-[20%] right-[-10%] w-[40vw] h-[40vw] bg-white/[0.08] rounded-full blur-[120px] animate-blob animation-delay-2000"></div>
			<div class="absolute bottom-[-10%] left-[20%] w-[50vw] h-[50vw] bg-blue-200/[0.08] rounded-full blur-[120px] animate-blob animation-delay-4000"></div>
		</div>
		<Navbar />
		<main>
			<slot />
		</main>
		<Footer />



		<script>
		</script>
	</body>
</html>

<style>
	@keyframes blob {
		0% {
			transform: translate(0px, 0px) scale(1);
		}
		33% {
			transform: translate(100px, -120px) scale(1.2);
		}
		66% {
			transform: translate(-80px, 70px) scale(0.85);
		}
		100% {
			transform: translate(0px, 0px) scale(1);
		}
	}

	.animate-blob {
		animation: blob 35s infinite alternate cubic-bezier(0.4, 0, 0.2, 1);
		will-change: transform;
	}

	.animation-delay-2000 {
		animation-delay: 7s;
	}

	.animation-delay-4000 {
		animation-delay: 15s;
	}
</style>
