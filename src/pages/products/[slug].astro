---
import Layout from '../../layouts/Layout.astro';
import products from '../../data/products.json';
import SizeChart from '../../components/SizeChart.astro';

export async function getStaticPaths() {
  return products.map(product => ({
    params: { slug: product.slug },
  }));
}

const { slug } = Astro.params;
const product = products.find(p => p.slug === slug);

if (!product) {
  return Astro.redirect('/404');
}
---

<Layout title={`${product.name} - VELTRIQ`}>
  <div class="container mx-auto px-6 md:px-12 py-24">
    <!-- Breadcrumbs -->
    <nav class="flex text-sm text-gray-400 mb-8 uppercase tracking-wider" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-2 md:space-x-3">
        <li class="inline-flex items-center">
          <a href="/" class="hover:text-white transition-colors mx-0">Home</a>
        </li>
        <li>
            <span>/</span>
        </li>
        <li>
          <div class="flex items-center">
            <a href={`/categories/${product.category}`} class="hover:text-white transition-colors">{product.category.replace('-', ' ')}</a>
          </div>
        </li>
        <li>
            <span>/</span>
        </li>
        <li aria-current="page">
          <div class="flex items-center">
            <span class="text-white">{product.name}</span>
          </div>
        </li>
      </ol>
    </nav>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <div class="product-gallery">
        <div class="aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-xl bg-white/5 border border-white/5 mb-4">
           <img id="main-image" src={product.images[0]} alt={product.name} class="w-full h-full object-cover object-center transition-opacity duration-300">
        </div>
        <div class="grid grid-cols-4 gap-4">
          {product.images.map((image, index) => (
            <button class="thumbnail-btn aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-lg bg-white/5 border border-white/5 focus:ring-2 focus:ring-white focus:outline-none opacity-70 hover:opacity-100 transition-all duration-300" data-image={image}>
              <img src={image} alt={`${product.name} ${index + 1}`} class="w-full h-full object-cover object-center">
            </button>
          ))}
        </div>
      </div>
      <div>
        <h1 class="text-4xl md:text-5xl font-light uppercase tracking-widest mb-6 text-white">{product.name}</h1>
        <div class="flex items-center gap-4 mb-8">
          <p class="text-3xl font-semibold text-white/90">{product.price}</p>
          {product.originalPrice && (
            <p class="text-xl text-gray-500 line-through decoration-white/30 decoration-1">{product.originalPrice}</p>
          )}
        </div>
        <p class="text-lg text-gray-300 font-light leading-relaxed mb-8">{product.description}</p>
        
        <div class="mt-8 border-t border-white/10 pt-8">
          <h3 class="text-sm font-bold uppercase tracking-widest text-white/60 mb-4">Available Colors</h3>
          <div class="flex space-x-4">
            {product.colors.map(color => (
              <div class="group relative">
                <div 
                  class="w-10 h-10 rounded-full border border-white/20 shadow-xl focus:outline-none focus:ring-2 focus:ring-white transition-transform hover:scale-105"
                  style={`background-color: ${color.hex};`}
                  title={color.name}
                  aria-label={`Select color: ${color.name}`}
                  tabindex="0"
                ></div>
                <span class="absolute -bottom-8 left-1/2 -translate-x-1/2 text-xs text-white/0 group-hover:text-white/70 transition-colors uppercase tracking-widest whitespace-nowrap">{color.name}</span>
              </div>
            ))}
          </div>
        </div>

        <div class="mt-8 border-t border-white/10 pt-8">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-sm font-bold uppercase tracking-widest text-white/60">Available Sizes</h3>
            <button id="open-size-chart" class="text-xs text-white underline hover:no-underline uppercase tracking-wider offset-2 decoration-white/30 hover:text-gray-300 transition-colors">
              Size Guide
            </button>
          </div>
          <div class="flex flex-wrap gap-3">
            {product.sizes.map(size => (
              <span class="px-6 py-3 border border-white/10 rounded-lg text-white/80 hover:border-white hover:text-white transition-all cursor-default font-mono text-sm">{size}</span>
            ))}
          </div>
        </div>

        <SizeChart category={product.category} />

        <a href="https://forms.gle/WTZkpiupp8tSb56C9" target="_blank" class="mt-12 w-full md:w-auto inline-flex justify-center items-center bg-white text-black px-12 py-4 font-bold uppercase tracking-widest hover:bg-gray-200 transition-all duration-300 hover:scale-105">
          Order Now
        </a>

        {product.fabricInfo && (
          <div class="mt-12 border-t border-white/10 pt-8">
            <h3 class="text-sm font-bold uppercase tracking-widest text-white/60 mb-4">Fabric & Care</h3>
            <div class="text-gray-400 text-base leading-relaxed whitespace-pre-line">
              {product.fabricInfo}
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</Layout>

<script>
  const mainImage = document.getElementById('main-image') as HTMLImageElement;
  const thumbnails = document.querySelectorAll('.thumbnail-btn');

  thumbnails.forEach(thumb => {
    thumb.addEventListener('click', () => {
      const newImage = thumb.getAttribute('data-image');
      if (mainImage && newImage) {
        mainImage.style.opacity = '0';
        setTimeout(() => {
          mainImage.src = newImage;
          mainImage.style.opacity = '1';
        }, 150);
      }
    });

    // Hover effect for preview (optional, can remove if click-only is preferred)
    thumb.addEventListener('mouseenter', () => {
      const newImage = thumb.getAttribute('data-image');
      if (mainImage && newImage) {
        mainImage.src = newImage;
      }
    });
  });


</script>
