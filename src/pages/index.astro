---
import Layout from '../layouts/Layout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import ProductCard from '../components/ProductCard.astro';
import CategoryCard from '../components/CategoryCard.astro';
import products from '../data/products.json';

const newReleases = products.filter(p => p.tags.includes('new'));
const bestSellers = products.filter(p => p.tags.includes('bestseller'));
const categories = [
  {
    name: 'Oversized T-Shirts',
    href: '/categories/oversized-tshirts',
    image: '/images/pic01.jpg'
  },
  {
    name: 'Crop Tops',
    href: '/categories/crop-tops',
    image: '/images/pic02.jpg'
  }
];
---

<Layout title="VELTRIQ">
  <section class="min-h-screen flex flex-col justify-center items-center text-center relative overflow-hidden">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,var(--tw-gradient-stops))] from-white/5 via-transparent to-transparent opacity-50"></div>
    <div class="z-10 px-4">
      <img src="/images/logo w text.png" alt="VELTRIQ" class="w-xl mx-auto mb-8 drop-shadow-2xl fade-in-up">
      <p class="text-xl md:text-2xl tracking-[0.2em] font-light text-gray-300 uppercase fade-in-up">Minimal. Timeless.</p>
      <a href="#new-releases" class="mt-12 inline-block bg-white text-black px-10 py-4 font-semibold uppercase tracking-widest text-sm hover:bg-gray-200 transition-all duration-300 hover:scale-105 fade-in-up animate-delay-1000">
        Shop Collection
      </a>
    </div>
  </section>

  <section id="new-releases" class="py-24">
    <div class="container mx-auto px-4">
      <SectionHeading title="New Releases" />
      <div class="grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8 mt-12">
        {newReleases.map(product => (
          <ProductCard {product} />
        ))}
      </div>
    </div>
  </section>

  <section id="best-sellers" class="py-24">
    <div class="container mx-auto px-4">
      <SectionHeading title="Best Sellers" />
      <div class="grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8 mt-12">
        {bestSellers.map(product => (
          <ProductCard {product} />
        ))}
      </div>
    </div>
  </section>

  <section id="browse-by-category" class="py-24">
    <div class="container mx-auto px-4">
      <SectionHeading title="Browse by Category" />
      <div class="grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-2 xl:gap-x-8 mt-12">
        {categories.map(category => (
          <CategoryCard {category} />
        ))}
      </div>
    </div>
  </section>

  <section id="how-it-works" class="py-24">
    <div class="container mx-auto px-4">
      <SectionHeading title="How It Works" />
      <div class="mt-12 max-w-3xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8 text-center">
        <div class="p-8 border border-gray-700 rounded-lg transition-all duration-300 hover:border-white/30 hover:shadow-[0_0_20px_rgba(255,255,255,0.1)]">
          <h3 class="text-2xl font-bold">1. Choose Product</h3>
          <p class="mt-4 text-gray-400">Browse our collection and find the perfect item for you.</p>
        </div>
        <div class="p-8 border border-gray-700 rounded-lg transition-all duration-300 hover:border-white/30 hover:shadow-[0_0_20px_rgba(255,255,255,0.1)]">
          <h3 class="text-2xl font-bold">2. Pay via UPI</h3>
          <p class="mt-4 text-gray-400">Make a payment to our UPI ID. Take a screenshot of the confirmation.</p>
        </div>
        <div class="p-8 border border-gray-700 rounded-lg transition-all duration-300 hover:border-white/30 hover:shadow-[0_0_20px_rgba(255,255,255,0.1)]">
          <h3 class="text-2xl font-bold">3. Fill Order Form</h3>
          <p class="mt-4 text-gray-400">Click the "Order Now" button and fill out the Google Form with your details.</p>
        </div>
        <div class="p-8 border border-gray-700 rounded-lg transition-all duration-300 hover:border-white/30 hover:shadow-[0_0_20px_rgba(255,255,255,0.1)]">
          <h3 class="text-2xl font-bold">4. Order Confirmed</h3>
          <p class="mt-4 text-gray-400">We'll verify your payment and confirm your order via email.</p>
        </div>
      </div>
    </div>
  </section>

  <section id="payment-information" class="pt-24">
    <div class="container mx-auto px-4 text-center">
      <SectionHeading title="Payment Information" />
      <div class="mt-12 max-w-xl mx-auto">
        <p class="text-lg text-gray-400">We currently accept payments via <span class="font-bold text-white">UPI only.</span></p>
        <p class="mt-4 text-gray-400">
          After making the payment, please fill out the order form, which is linked on each product page.
          Your order will be confirmed once we have manually verified the payment.
        </p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .fade-in-up {
    animation: fadeInUp 1s ease-out both;
  }

  .animate-delay-1000 {
    animation-delay: 1s;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
